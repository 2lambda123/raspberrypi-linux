// Definitions for audioinjector.net audio add on soundcard
/dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2708";

	fragment@0 {
		target = <&i2s>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@1 {
		target = <&i2c1>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";

			cs4265: cs4265@4e {
				#sound-dai-cells = <0>;
				compatible = "cirrus,cs4265";
				reg = <0x4e>;
				reset-gpios = <&gpio 5 0>;
				status = "okay";
			};
		};
	};

	fragment@2 {
		target = <&sound>;
		snd: __overlay__ {
			compatible = "ai,audioinjector-ultra-soundcard";
			i2s-controller = <&i2s>;
			codec = <&cs4265>;
			status = "okay";
		};
	};

	__overrides__ {
		non-stop-clocks = <&snd>, "non-stop-clocks?";
	};
};
