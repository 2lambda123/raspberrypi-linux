// Definitions for IMX135 camera module on VC I2C bus
/dts-v1/;
/plugin/;

#include <dt-bindings/gpio/gpio.h>

/{
	compatible = "brcm,bcm2835";

	fragment@0 {
		target = <&i2c_csi_dsi>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";

			vcm: ad5398@0c {
				compatible = "adi,ad5398";
				reg = <0x0c>;

				VANA-supply = <&cam1_reg>;
			};

			imx135: imx135@10 {
				compatible = "sony,imx135";
				reg = <0x10>;
				status = "okay";

				clocks = <&imx135_clk>;
				clock-names = "xclk";

				vana-supply = <&cam1_reg>;	/* 2.8v */
				vdig-supply = <&imx135_vdig>;	/* 1.05v */
				vif-supply = <&imx135_vif>;	/* 1.8v */

				lens-focus = <&vcm>;

				rotation = <0>;
				orientation = <2>;

				port {
					imx135_0: endpoint {
						remote-endpoint = <&csi1_ep>;
						clock-lanes = <0>;
						data-lanes = <1 2 3 4>;
						link-frequencies =
							/bits/ 64 <633600000
								320000000>;
					};
				};
			};
		};
	};

	fragment@1 {
		target = <&csi1>;
		__overlay__ {
			status = "okay";

			port {
				csi1_ep: endpoint {
					remote-endpoint = <&imx135_0>;
					clock-lanes = <0>;
					data-lanes = <1 2 3 4>;
				};
			};
		};
	};

	fragment@2 {
		target = <&i2c0if>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@3 {
		target-path="/";
		__overlay__ {
			imx135_vdig: fixedregulator@0 {
				compatible = "regulator-fixed";
				regulator-name = "imx135_vdig";
				regulator-min-microvolt = <1200000>;
				regulator-max-microvolt = <1200000>;
			};
			imx135_vif: fixedregulator@1 {
				compatible = "regulator-fixed";
				regulator-name = "imx135_vif";
				regulator-min-microvolt = <1800000>;
				regulator-max-microvolt = <1800000>;
			};
			imx135_clk: camera-clk {
				compatible = "fixed-clock";
				#clock-cells = <0>;
				clock-frequency = <24000000>;
			};
		};
	};

	fragment@4 {
		target = <&i2c0mux>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@5 {
		target = <&cam1_reg>;
		__overlay__ {
			status = "okay";
			regulator-name = "imx135_vana";
			startup-delay-us = <300000>;
			regulator-min-microvolt = <2700000>;
			regulator-max-microvolt = <2700000>;
		};
	};

	__overrides__ {
		rotation = <&imx135>,"rotation:0";
		orientation = <&imx135>,"orientation:0";
	};
};
