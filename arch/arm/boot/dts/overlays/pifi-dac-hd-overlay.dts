// Definitions for PiFi DAC HD
/dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2835";

	fragment@0 {
		target = <&i2s>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@1 {
		target = <&i2c1>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";

			pcm5142@4c {
				#sound-dai-cells = <0>;
				compatible = "ti,pcm5142";
				reg = <0x4c>;
				status = "okay";
			};
		};
	};

	fragment@2 {
		target = <&sound>;
		pifi_dac_hd: __overlay__ {
			compatible = "pifi,pifi-dac-hd";
			i2s-controller = <&i2s>;
			status = "okay";
		};
	};
};
