// Overlay for PiFi-DAC-HD
/dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2708";

	fragment@0 {
		target = <&i2s>;
		__overlay__ {
			status = "okay";
        };
	};

	fragment@1 {
		target = <&i2c1>;
		__overlay__ {
			status = "okay";
			#address-cells =<1>;
			#size-cells =<0>;

        	pcm5142: pcm5142@4c {
				#sound-dai-cells = <0>;
				compatible = "ti,pcm5142";
				reg = <0x4c>;
				status = "okay";
			};
		};
	};

	fragment@2 {
		target = <&sound>;
		__overlay__ {
			compatible = "simple-audio-card";
			simple-audio-card,name = "PiFi-DAC-HD";
			status="okay";

			playback_link: simple-audio-card,dai-link@1 {
				format = "i2s";
				p_cpu_dai: cpu {
					sound-dai = <&i2s>;
				};
				p_codec_dai: codec {
					sound-dai = <&pcm5142>;
				};
			};
		};
	};
};
