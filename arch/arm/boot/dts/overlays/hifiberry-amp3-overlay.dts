// Definitions for HiFiBerry AMP3
/dts-v1/;
/plugin/;
#include <dt-bindings/gpio/gpio.h>

/ {
	compatible = "brcm,bcm2835";

	fragment@0 {
		target-path = "/";
		__overlay__ {
			dacpro_osc: dacpro_osc {
				compatible = "hifiberry,dacpro-clk";
				#clock-cells = <0>;
			};
		};
	};

	fragment@1 {
		target = <&i2s>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@2 {
		target = <&i2c1>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";

			tas5754m@4d {
				#sound-dai-cells = <0>;
				compatible = "ti,tas5754m";
				reg = <0x4d>;
				clocks = <&dacpro_osc>;
				status = "okay";
			};
		};
	};

	fragment@3 {
		target = <&sound>;
		hifiberry_amp3: __overlay__ {
			compatible = "hifiberry,hifiberry-amp3";
			i2s-controller = <&i2s>;
			status = "okay";
			mute-gpio = <&gpio 4 GPIO_ACTIVE_LOW>;
		};
	};

	__overrides__ {
		24db_digital_gain =
			<&hifiberry_amp3>,"hifiberry-amp3,24db_digital_gain?";
		leds_off = <&hifiberry_amp3>,"hifiberry-amp3,leds_off?";
		mute_ext_ctl = <&hifiberry_amp3>,"hifiberry-amp3,mute_ext_ctl:0";
		auto_mute = <&hifiberry_amp3>,"hifiberry-amp3,auto_mute?";
	};
};
